@model IChat.Models.user_master
@{
    ViewBag.Title = "Edit";
}

<h2>會員個資修改</h2>
<form method="post" action="@Url.Action("Edit","Home")" class="form-horizontal">
    <div class="form-group">
        <label for="name" class="col-md-2 control-label">
            會員名稱
        </label>
        <div class="col-md-10">
            <input type="text" class="form-control" name="name" id="name" value="@Model.name" />
            <input type="hidden" name="CategoryID" value="@Model.id" />
        </div>
    </div>

    <div class="form-group">
        <label for="desc" class="col-md-2 control-label">
            電話
        </label>
        <div class="col-md-10">
            <input type="text" class="form-control" name="phone" id="phone" value="@Model.phone" />
        </div>
    </div>
    <div class="form-group">
        <label for="desc" class="col-md-2 control-label">
            email
        </label>
        <div class="col-md-10">
            <input type="text" class="form-control" name="email" id="email" value="@Model.email" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">修改</button>
        </div>
    </div>
</form>
